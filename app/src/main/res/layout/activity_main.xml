<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26ADE0"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26ADE0"
        android:gravity="center">

        <TextView
            android:id="@+id/topBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/image_eightBall"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:text="@string/top_banner"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/askButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="89dp"
            android:background="#3F51B5"
            android:text="@string/ask_button"
            android:textColor="@android:color/background_light" />

        <ImageView
            android:id="@+id/image_eightBall"
            android:layout_width="261dp"
            android:layout_height="241dp"
            android:layout_above="@id/askButton"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_centerInParent="true"
            android:layout_marginBottom="41dp"
            android:contentDescription="@string/eight_ball"
            app:srcCompat="@drawable/ball1" />
    </RelativeLayout>
</LinearLayout>
